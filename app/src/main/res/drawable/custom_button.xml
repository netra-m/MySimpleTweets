<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff6ec8ff" />
            <gradient android:angle="-90" android:startColor="#ff6ec8ff" android:endColor="#4099FF"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4099FF" />
            <solid android:color="#ff6ec8ff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff6ec8ff" />
            <gradient android:angle="-90" android:startColor="#ff6ec8ff" android:endColor="#4099FF" />
        </shape>
    </item>
</selector>